---
// src/components/Navigation.astro
---
<header class="top-bar">
  <div class="menu-trigger" id="menuBtn">
    <span></span><span></span><span></span>
  </div>
  <a href="/" class="header-logo">LAST &amp; GABA</a>
</header>

<div class="menu-overlay" id="menuOverlay">
  <div class="menu-panel">
    <div class="menu-close" id="menuClose">×</div>
    <div class="menu-title">LAST &amp; GABA</div>
    
    <ul class="menu-list">
      <li class="menu-item">
        <a class="menu-line" href="/elements">
          <span class="menu-number">01</span>
          <span class="menu-label">ELEMENTS</span>
        </a>
      </li>
      <li class="menu-item">
        <a class="menu-line" href="/progress">
          <span class="menu-number">02</span>
          <span class="menu-label">PROGRESS</span>
        </a>
      </li>
      <li class="menu-item">
        <a class="menu-line" href="/essay">
          <span class="menu-number">03</span>
          <span class="menu-label">ESSAY</span>
        </a>
      </li>
      <li class="menu-item">
        <div class="menu-line" id="brandsToggle">
          <span class="menu-number">04</span>
          <span class="menu-label">BRANDS</span>
        </div>
        <ul id="brandList" class="brand-tree">
          <li><a href="/brands/comoli">COMOLI</a></li>
          <li><a href="/brands/ssstein">SSSTEIN</a></li>
          <li><a href="/brands/forme">FORME</a></li>
          <li><a href="/brands/manifold">MANIFOLD</a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

<style>
  /* ヘッダー・メニュー関連のスタイルのみを抽出 */
  .top-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    background-color: #FAF9F6; /* --bg の値 */
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 40px;
    box-sizing: border-box;
    z-index: 3000;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    gap: 24px;
  }

  .menu-trigger {
    width: 28px;
    height: 18px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .menu-trigger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #333;
    transition: 0.3s;
  }

  .header-logo {
    font-family: "YuMincho", "Yu Mincho", serif;
    font-size: 1.1rem;
    letter-spacing: 0.4em;
    cursor: pointer;
    color: #333;
    text-decoration: none;
    white-space: nowrap;
  }

  .menu-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease;
    z-index: 3200;
  }
  .menu-overlay.is-open {
    opacity: 1;
    pointer-events: auto;
  }

  .menu-panel {
    position: absolute;
    top: 0;
    left: 0;
    width: 320px;
    max-width: 80vw;
    height: 100%;
    background: #111;
    color: #f5f5f5;
    box-sizing: border-box;
    padding: 32px 40px;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  .menu-overlay.is-open .menu-panel {
    transform: translateX(0);
  }

  .menu-close {
    font-size: 24px;
    line-height: 1;
    cursor: pointer;
    margin-bottom: 40px;
  }

  .menu-title {
    font-family: "YuMincho", "Yu Mincho", serif;
    font-size: 1.1rem;
    letter-spacing: 0.4em;
    margin-bottom: 40px;
  }

  .menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .menu-item {
    margin-bottom: 16px;
  }

  .menu-line {
    display: inline-flex;
    align-items: baseline;
    gap: 0.6em;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .menu-number {
    font-size: 0.7rem;
    color: #999;
  }
  .menu-label {
    font-size: 0.9rem;
    letter-spacing: 0.2em;
  }

  .brand-tree {
    list-style: none;
    padding: 12px 0 0 1.9em;
    margin: 0;
    display: none;
  }
  .brand-tree.is-open {
    display: block;
  }
  .brand-tree li {
    font-size: 0.85rem;
    color: #ccc;
    margin-bottom: 12px;
    letter-spacing: 0.1em;
  }
  .brand-tree a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s;
  }
  .brand-tree a:hover {
    color: #fff;
  }

  @media (max-width: 768px) {
    .top-bar { padding: 0 20px; height: 60px; gap: 16px; }
    .menu-panel { width: 240px; padding: 20px 16px; }
  }
</style>

<script is:raw>
  // メニュー開閉ロジック
  const initMenu = () => {
    const menuBtn = document.getElementById('menuBtn');
    const menuOverlay = document.getElementById('menuOverlay');
    const menuClose = document.getElementById('menuClose');
    const brandsToggle = document.getElementById('brandsToggle');
    const brandList = document.getElementById('brandList');

    if (!menuBtn || !menuOverlay) return;

    const openMenu = () => menuOverlay.classList.add('is-open');
    const closeMenu = () => menuOverlay.classList.remove('is-open');

    menuBtn.addEventListener('click', openMenu);
    menuClose?.addEventListener('click', closeMenu);
    menuOverlay.addEventListener('click', (e) => {
      if (e.target === menuOverlay) closeMenu();
    });

    brandsToggle?.addEventListener('click', (e) => {
      e.stopPropagation();
      brandList?.classList.toggle('is-open');
    });
  };

  // Astroの遷移後も動作するように設定
  initMenu();
  document.addEventListener('astro:after-swap', initMenu);
</script>